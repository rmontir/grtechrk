@{
    ViewData["Title"] = "Company";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Company</h1>
            </div>
            <div class="col-sm-6 text-right">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <button type="button" class="btn btn-success btn-sm with-icon" onclick="openAddForm()">
                        <i class="fas fa-plus mr-2"></i>
                        <span>Add</span>
                    </button>
                }
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div id="content-container" class="container-fluid">
        <div class="d-flex flex-column">
            <div id="table-container">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-data" id="table-company">
                        <thead>
                            <tr>
                                <th style="width: 5%;">Index</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Logo</th>
                                <th>Website</th>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <th style="width: 12%;text-align: center;">Action</th>
                                }
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->

<div id="form-modal" class="modal fade" role="dialog">
    <partial name="_CompanyFormPopupPartial" />
</div>
<div id="upload-modal" class="modal fade" role="dialog">
    <partial name="_UploadLogoPopupPartial" />
</div>

@section Scripts {
    <script type="text/javascript">
        let listController = "@Url.Action("List", "Company")";
        let formController = "@Url.Action("Form", "Company")";
        let addController = "@Url.Action("Add", "Company")";
        let updateController = "@Url.Action("Update", "Company")";
        let deleteController = "@Url.Action("Delete", "Company")";
        let uploadController = "@Url.Action("Upload", "Company")";

        var table;
        var dataCompany;

        $(function () {
            bindDataTable();
        });

        let bindDataTable = () => {
            table = $('.table-data').DataTable(
                {
                    "order": [[1, "asc"]],
                    "destroy":true,
                    "processing": true,
                    "serverSide": true,
                    "filter": true,
                    "orderMulti": false,
                    "pageLength": 10,
                    "ajax":
                    {
                        url: listController,
                        type: "GET",
                        dataSrc: function (v) {
                            dataCompany = v.data;
                            return v.data;
                        }
                    },
                    "columns": [
                        { "data": "id", "name": "id", "autoWidth": true, "searchable": true, "orderable": false },
                        { "data": "name", "name": "name", "autoWidth": true, "searchable": true },
                        { "data": "email", "name": "email", "autoWidth": true, "searchable": true },
                        { "data": "logoSrc", "name": "logoSrc", "autoWidth": true, "searchable": true, "orderable": false },
                        { "data": "website", "name": "website", "autoWidth": true, "searchable": true },

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <text>
                                {
                                    "render": function (data, type, full, meta) {
                                        return `<div class="d-flex flex-row justify-content-center">
                                                    <button onclick="openEditForm('${full.id}')" data-edit="${full.id}" class="btn bg-white text-primary border" data-toggle="tooltip" data-placement="top" title="Edit"><i class ="fas fa-edit"></i></button>
                                                    <button onclick="confirmDeleteData('${full.id}')" data-delete="${full.id}" class="btn bg-white text-danger border" data-toggle="tooltip" data-placement="top" title="Delete"><i class ="fas fa-trash"></i></button>
                                                </div>  `;
                                    },
                                    "orderable": false
                                }
                            </text>
                        }
                    ],
                    "columnDefs": [
                        {
                            "targets": [0],
                            "render": function (data, type, row, meta) {
                                return meta.row + meta.settings._iDisplayStart + 1;
                            }
                        },
                        {
                            "targets": [3],
                            "render": function (data, type, row, meta) {
                                if (row.logoSrc == null || row.logoSrc == '') {
                                    return `<button type='button' class='btn btn-link p-0' onclick='openUploadForm(${row.id})'>Upload</button>`;
                                } else {
                                    return `<img src='${row.logoSrc}' class='img-fluid' style='max-width: 200px; cursor: pointer;' onclick='openUploadForm(${row.id})' />`;
                                }
                            }
                        },
                        {
                            "targets": [4],
                            "render": function (data, type, row, meta) {
                                if (row.website == null) {
                                    return '';
                                } else {
                                    return `<a href='${row.website}' target='_blank'>${row.website}</a>`;
                                }
                            }
                        }
                    ]
                }
            );
        }

        let refreshList = () => {
            table.ajax.reload();
        }

        let refreshForm = (id) => {
            $.get(formController, { id: id })
                .done(function (data) {
                    setHtml('#form-modal', data);
                    openForm();
                    $('.select2bs4').select2({
                        theme: 'bootstrap4'
                    })
                });
        }

        function openAddForm() {
            refreshForm(null);
        }

        function openEditForm(id) {
            refreshForm(id);
        }

        function openForm() {
            openStaticModal('#form-modal');
        }

        function closeForm() {
            closeModal('#form-modal');
        }

        function openUploadForm(id) {
            openStaticModal('#upload-modal');
            setValue('#hfId', id);
        }

        function disableButtons() {
            disableElement('#btnAction');
            disableElement('#btnClose');
            setHtml('#btnAction', '<span class="fas fa-spinner animate"></span> Processing...');
        }

        function enableButtons(action) {
            enableElement('#btnAction');
            enableElement('#btnClose');
            setHtml('#btnAction', action);
        }

        function disableUploadButtons() {
            disableElement('#btnUpload');
            disableElement('#btnClosePopup');
            setHtml('#btnUpload', '<span class="fas fa-spinner animate"></span> Uploading...');
        }

        function enableUploadButtons() {
            enableElement('#btnUpload');
            enableElement('#btnClosePopup');
            setHtml('#btnUpload', 'Upload');
        }

        function initFormData(inputElement, id, name, email, website) {
            var files = inputElement.files; console.log(files);
            var formData = new FormData();
            var length = (files == undefined ? -1 : files.length);

            formData.append("Id", id);
            formData.append("Name", name);
            formData.append("Email", email);
            formData.append("Website", website);
            for (var i = 0; i <= length; i++) {
                formData.append("Logo", files[i]);
            }

            return formData;
        }

        function addData() {
            var name = getValue('#txtName');
            var email = getValue('#txtEmail');
            var flogo = document.getElementById('fLogo');
            var website = getValue('#txtWebsite');
            var formData = initFormData(flogo, '', name, email, website);
            disableButtons();

            $.ajax({
                method: "post",
                url: addController,
                data: formData,
                contentType: false,
                processData: false,
            })
                .done(function (data) {
                    refreshList();
                    swalSuccess("Add company has been successful");
                    closeForm();
                    enableButtons('Add');
                })
                .fail(function (err) {
                    swalError(generateErrorMessageWithoutNumber(err.responseJSON.errorMessages));
                    enableButtons('Add');
                });
        }

        function editData(id) {
            var name = getValue('#txtName');
            var email = getValue('#txtEmail');
            var flogo = document.getElementById('fLogoEdit');
            var website = getValue('#txtWebsite');
            var formData = initFormData(flogo, id, name, email, website);
            disableButtons();

            $.ajax({
                method: "put",
                url: updateController,
                data: formData,
                contentType: false,
                processData: false,
            })
                .done(function (data) {
                    refreshList();
                    swalSuccess("Update company has been successful");
                    closeForm();
                    enableButtons('Edit');
                })
                .fail(function (err) {
                    swalError(generateErrorMessageWithoutNumber(err.responseJSON.errorMessages));
                    enableButtons('Edit');
                });
        }

        function editLogo() {
            var id = getValue('#hfId');
            var flogo = document.getElementById('fLogoEdit');
            var formData = initFormData(flogo, id, null, null, null);
            disableUploadButtons();

            $.ajax({
                method: "put",
                url: uploadController,
                data: formData,
                contentType: false,
                processData: false,
            })
                .done(function (data) {
                    refreshList();
                    swalSuccess("Update logo has been successful");
                    closeModal('#upload-modal');
                    enableUploadButtons();
                })
                .fail(function (err) {
                    swalError(generateErrorMessageWithoutNumber(err.responseJSON.errorMessages));
                    enableUploadButtons();
                });
        }

        async function confirmDeleteData(id) {
            let confirmBox = await swalConfirmAsync("Do you want to delete this company?");

            if (confirmBox.value) {
                deleteData(id);
            }
        }

        function deleteData(id) {
            $.ajax({
                method: "delete",
                url: deleteController,
                data: { id: id }
            })
                .done(function (data) {
                    refreshList();
                    swalSuccess("Delete company has been successful");
                })
                .fail(function (err) {
                    swalError(generateErrorMessageWithoutNumber(err.responseJSON.errorMessages));
                });
        }
    </script>
}